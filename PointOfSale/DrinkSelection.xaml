<Page x:Class="PointOfSale.DrinkSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DrinkSelection">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label>Size:</Label>
            <RadioButton GroupName="Size" Content="Small" />
            <RadioButton GroupName="Size" Content="Medium" />
            <RadioButton GroupName="Size" Content="Large" />
        </StackPanel>
        <Button Click="SelectFlavor" Grid.Row="1" Grid.Column="0">Sodasaurus</Button>
        <Button Grid.Row="1" Grid.Column="1">Tyrannotea</Button>
        <Button Grid.Row="2" Grid.Column="0">Jurassic Java</Button>
        <Button Grid.Row="2" Grid.Column="1">Water</Button>
    </Grid>
</Page>
