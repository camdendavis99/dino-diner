<Page x:Class="PointOfSale.ComboSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ComboSelection">

    <WrapPanel>
        <WrapPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Width" Value="200"></Setter>
                <Setter Property="Height" Value="150"></Setter>
            </Style>
        </WrapPanel.Resources>
        <Button Click="EntreeSelected" Tag="Brontowurst Combo">Brontowurst Combo</Button>
        <Button Click="EntreeSelected" Tag="Dino-Nuggets Combo">Dino-Nuggets Combo</Button>
        <Button Click="EntreeSelected" Tag="Steakosaurus Burger Combo">Steakosaurus Burger Combo</Button>
        <Button Click="EntreeSelected" Tag="T-Rex King Burger Combo">T-Rex King Burger Combo</Button>
        <Button Click="EntreeSelected" Tag="Pterodactyl Wings Combo">Pterodactyl Wings Combo</Button>
        <Button Click="EntreeSelected" Tag="Prehistoric PB&amp;J Combo">Prehistoric PB&amp;J Combo</Button>
        <Button Click="EntreeSelected" Tag="Velociwrap Combo">VelociWrap Combo</Button>
    </WrapPanel>
</Page>
